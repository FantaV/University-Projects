import java.util.ArrayList;
import java.util.List;

public class CrivelloEratostene {
    public static void main(String[] args) {
        // Creiamo un'istanza del Crivello con un limite specifico
        Crivello crivello = new Crivello(50);
        
        // Eseguiamo il calcolo
        crivello.calcolaPrimi();
        
        // Otteniamo e stampiamo i numeri primi
        List<Integer> primi = crivello.getNumeriPrimi();
        System.out.println("Numeri primi fino a " + crivello.getLimite() + ": " + primi);
    }
}

class Crivello {
    private int limite; // Numero massimo fino a cui calcolare i primi
    private boolean[] èPrimo; // Array per tracciare i numeri primi

    // Costruttore: inizializza il limite e l'array
    public Crivello(int limite) {
        this.limite = limite;
        this.èPrimo = new boolean[limite + 1];
    }

    // Metodo per calcolare i numeri primi usando il Crivello di Eratostene
    public void calcolaPrimi() {
        // Inizializziamo tutti i numeri come "primi"
        for (int i = 0; i <= limite; i++) {
            èPrimo[i] = true;
        }

        // Sappiamo che 0 e 1 non sono primi
        èPrimo[0] = false;
        èPrimo[1] = false;

        // Applichiamo il crivello
        for (int i = 2; i * i <= limite; i++) {
            if (èPrimo[i]) {
                for (int j = i * i; j <= limite; j += i) {
                    èPrimo[j] = false;
                }
            }
        }
    }

    // Metodo per ottenere i numeri primi come lista
    public List<Integer> getNumeriPrimi() {
        List<Integer> primi = new ArrayList<>();
        for (int i = 2; i <= limite; i++) {
            if (èPrimo[i]) {
                primi.add(i);
            }
        }
        return primi;
    }

    // Getter per il limite
    public int getLimite() {
        return limite;
    }
}